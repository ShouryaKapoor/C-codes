#include <stdio.h>

int main()
{
    int p,r,t,si;
    
    printf("Enter the principal amount:");
    scanf("%d",&p);
    
    printf("Enter the rate of interest:");
    scanf("%d",&r);
    
    printf("Enter the time period:");
    scanf("%d",&t);
    
    si = p*r*t/100;
    
    printf("The simple interst is :%d",si);
    
    return 0;
}
